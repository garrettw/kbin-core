// https://aka.ms/devcontainer.json
{
    "name": "PHP 8.2 + Git + Node LTS + Apache",
    "dockerComposeFile": "./docker-compose.yml",
    "service": "php",
    "workspaceFolder": "/var/www/html",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "username": "vscode",
            "userUid": "1000",
            "userGid": "1000",
            "upgradePackages": "true"
        },
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/node:1": {},
        "./local-features/apache-config": "latest"
    },
    "overrideFeatureInstallOrder": [
        "ghcr.io/devcontainers/features/common-utils"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "predrag-nikolic.php-class-helper",
                "ikappas.composer",
                "ms-azuretools.vscode-docker",
                "mikestead.dotenv",
                "davidanson.vscode-markdownlint",
                "xdebug.php-debug",
                "neilbrayfield.php-docblocker",
                "bmewburn.vscode-intelephense-client",
                "mehedidracula.php-namespace-resolver",
                "levacic.vscode-phpstan",
                "nadim-vscode.twig-code-snippets",
                "pflannery.vscode-versionlens",
                "redhat.vscode-yaml"
            ],
            "settings": {
                "php.validate.executablePath": "/usr/local/bin/php"
            }
        }
    },
    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    "forwardPorts": [
        8080
    ],
    // Use 'postCreateCommand' to run commands after the container is created.
    // "postCreateCommand": "sudo chmod a+x \"$(pwd)\" && sudo rm -rf /var/www/html && sudo ln -s \"$(pwd)/public\" /var/www/html && chown -R 1000:1000 /var/www/html",
    "postCreateCommand": "cp .devcontainer/basic/.env .env && composer install --prefer-dist --no-progress && chmod +x bin/console && sync; sudo rm -rf /var/www/html && sudo ln -s \"$(pwd)/public\" /var/www/html"

    // Set `remoteUser` to `root` to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
    // "remoteUser": "vscode"
}
